/* pages/wallet/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: #eee;
}
.overage{
  padding: 40rpx 0;
  background-color: #fff;
  text-align: center;
}
.overage .overage-header{
  font-size: 25rpx;
}
.overage .overage-content{
  font-size: 120rpx;
  font-weight: 700;
  padding: 30rpx 0;
}
.overage .overage-desc{
  font-size: 26rpx;
  border:2px solid #666;
  padding: 5rpx 10rpx;
  border-radius: 60rpx;
}
.btn-charge{
  margin: 20rpx 0 -20rpx 0;
}
.tapbar{
  padding: 40rpx;
  background-color: #fff;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.color{
  color: #b9dd08;
  margin-right: 10rpx;
}